soma de dois números 
let // var // const
let= consegue mudar a variável
var= igual let
const= não consegue

console.log() = print()
console.log

// Soma de dois números

let numero1 = 10
let numero2 = 5

let soma = numero1 + numero2
let sub = numero1 - numero2
let div = numero1 / numero2
let mult = numero1 * numero2
let media = soma / 2

console.log('Operações matemáticas')

console.log('Soma = ', soma) //Soma = 15
console.log("Subtração = ", sub) //Subtração = 5
console.log(`Divisão = ${div}`) //Divisão = 2
console.log(`Multiplicação = ${mult}`) //Multiplicação = 50
console.log("Média = ", media) 

let nome = "Helena12345@#"
let idade = 15
let sabeJS = false

console.log(typeof nome) //string
console.log(typeof idade)//number
console.log(typeof sabeJS)//boolean
 
